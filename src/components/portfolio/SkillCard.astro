---
import { Icon } from "astro-icon/components";
const { name, iconName } = Astro.props;
---

<div
  class="group flex items-center justify-between p-4 bg-white dark:bg-gray-900 rounded-lg shadow hover:shadow-lg hover:ring-2 hover:ring-orange-500 transition-all"
>
  <div class="flex items-center gap-4">
    <Icon
      name={iconName}
      class="w-8 h-8 text-gray-700 dark:text-gray-300 group-hover:text-orange-500"
    />
    <h4 class="text-lg font-medium text-gray-800 dark:text-white">{name}</h4>
  </div>
</div>

