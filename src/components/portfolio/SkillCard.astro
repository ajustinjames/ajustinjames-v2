---
import { Icon } from "astro-icon/components";
const { name, iconName } = Astro.props;
---

<div
  class="group flex items-center justify-between p-4 bg-cardLightBg dark:bg-cardDarkBg rounded-lg shadow hover:shadow-lg hover:ring-2 hover:ring-primary transition-all"
>
  <div class="flex items-center gap-4">
    <Icon
      name={iconName}
      class="w-8 h-8 group-hover:text-primary"
    />
    <h4 class="text-lg font-medium text-lightTextPrimary dark:text-darkTextPrimary">{name}</h4>
  </div>
</div>