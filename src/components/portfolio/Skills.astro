---
import SkillCard from "./SkillCard.astro";

const skills = {
	languages: [
		{ name: "C#", icon: "devicon:csharp" },
		{ name: "TypeScript", icon: "devicon:typescript" },
		{ name: "Java", icon: "devicon:java" },
		{ name: "SQL", icon: "devicon:sqldeveloper" },
	],
	frameworks: [
		{ name: ".NET Core", icon: "devicon:dotnetcore" },
		{ name: "Angular", icon: "devicon:angular" },
		{ name: "Node.js", icon: "devicon:nodejs" },
		{ name: "Flutter", icon: "devicon:flutter" },
	],
	devops: [
		{ name: "Docker", icon: "devicon:docker" },
		{ name: "Kubernetes", icon: "devicon:kubernetes" },
		{ name: "Terraform", icon: "devicon:terraform" },
		{ name: "Git", icon: "devicon:git" },
	],
	tools: [
		{ name: "VS Code", icon: "devicon:vscode" },
		{ name: "Swagger", icon: "devicon:swagger" },
		{ name: "Android Studio", icon: "devicon:android" },
		{ name: "MySQL", icon: "devicon:mysql" },
	],
};
---

<section id="skills" class="py-16 px-4 max-w-6xl mx-auto">
	<h2
		class="text-3xl font-bold text-center mb-12"
	>
		Skills
	</h2>

	<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
		{
			Object.entries(skills).map(([category, items]) => (
				<div class="space-y-4">
					<h3 class="text-xl font-semibold text-orange-500 capitalize mb-4">
						{category}
					</h3>
					<div class="grid gap-4">
						{items.map((skill) => (
							<SkillCard
								name={skill.name}
								iconName={skill.icon}
							/>
						))}
					</div>
				</div>
			))
		}
	</div>
</section>

