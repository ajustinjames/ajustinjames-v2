---
import { Icon } from "astro-icon/components";

const techIcons = [
	"devicon-plain:dotnetcore",
	"devicon-plain:csharp",
	"devicon-plain:angular",
	"devicon-plain:typescript",
	"devicon-plain:kubernetes",
	"devicon-plain:amazonwebservices-wordmark",
];
---

<section class="flex flex-col justify-center items-center text-center">
	<div class="mb-6">
		<img
			src="/src/assets/ajlogo.svg"
			alt="Logo"
			class="w-48 h-48 mx-auto logo-animation"
			loading="lazy"
		/>
	</div>
	<div class="mb-6">
		<h1 class="text-4xl md:text-6xl font-bold text-primary">Aaron James</h1>
		<h2 class="text-xl md:text-2xl font-semibold text-secondary mt-2">
			Software Engineer
		</h2>
		<p class="text-base md:text-lg mt-4">
			Building quality solutions through software best practices
		</p>
	</div>
	<div class="mb-6">
		<div class="flex gap-2 mb-6 justify-center">
			{
				techIcons.map((icon) => (
					<Icon name={icon} size="36px" aria-hidden="true" class="icon-hover" />
				))
			}
		</div>

		<div class="flex justify-center items-center gap-2">
			<Icon
				name="line-md:chevron-down-circle"
				size="32px"
				aria-hidden="true"
				class="hover:border-2 hover:border-gray-300 hover:rounded-full transition-all duration-100"
			/>
			<p class="text-xl">Scroll down to learn more!</p>
		</div>
	</div>
</section>

<style>
	@keyframes logo-entrance {
		from {
			transform: scale(0.8) rotate(-10deg);
			opacity: 0;
		}
		to {
			transform: scale(1) rotate(0);
			opacity: 1;
		}
	}

	.logo-animation {
		animation: logo-entrance 0.6s ease-out forwards;
	}

	@media (prefers-reduced-motion: reduce) {
		.logo-animation {
			animation: none;
		}
	}
</style>
