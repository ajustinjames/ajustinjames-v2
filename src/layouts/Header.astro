---
import { Icon } from "astro-icon/components";
const currentPath = Astro.url.pathname;
---

<header>
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<nav
			class="flex h-16 items-center justify-between"
			aria-label="Main navigation"
		>
			<a
				href="/"
				class="text-2xl font-medium flex items-center"
				id="home"
				aria-label="ajustinjames - return to homepage">ajustinjames</a
			>
			<div class="flex gap-6 items-center">
				<ul class="flex gap-8 items-center">
					<!-- <li class="flex items-center">
						<a
							href="/apps"
							class="hover:text-primary text-lg transition-colors"
							aria-current={currentPath === "/apps" ? "page" : undefined}
							>Apps</a
						>
					</li>
					<li class="flex items-center">
						<a
							href="/blog"
							class="hover:text-primary text-lg transition-colors"
							aria-current={currentPath === "/blog" ? "page" : undefined}
							>Blog</a
						>
					</li> -->
				</ul>
				<div class="flex items-center">
					<button
						class="--text-primary hover:text-primary text-lg flex items-center transition-colors"
						onclick="toggleTheme()"
						aria-label="Toggle dark mode"
						type="button"
					>
						<Icon
							name="line-md:sunny"
							size="22px"
							class="dark:hidden"
							aria-hidden="true"
						/>
						<Icon
							name="line-md:moon"
							size="22px"
							class="hidden dark:block"
							aria-hidden="true"
						/>
					</button>
				</div>
			</div>
		</nav>
	</div>
</header>

<script>
	const home = document.getElementById("home");
	const effects = ["scale-hover", "underline-hover"];
	const randomEffect = effects[Math.floor(Math.random() * effects.length)];
	home?.classList.add(randomEffect);
</script>
