---
import Layout from "../layouts/Layout.astro";

const links = [
	{ href: "/", label: "Home" },
	//   { href: "/apps", label: "Applications" },
	//   { href: "/blog", label: "Blog" },
];
---

<Layout title="Sitemap" description="Navigation structure of the website">
	<main class="max-w-2xl mx-auto px-4 py-8">
		<h1 class="text-2xl font-semibold mb-6">Sitemap</h1>

		<ul class="space-y-3">
			{
				links.map((link) => (
					<li>
						<a
							href={link.href}
							class="text-lg hover:text-primary transition-colors"
						>
							{link.label}
						</a>
					</li>
				))
			}
		</ul>
	</main>
</Layout>
